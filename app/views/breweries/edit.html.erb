<%= form_with url: "/breweries/#{@brewery.id}", method: :patch, local: true do |form| %>
  <table>
    <tr><td colspan="2"><h2>Edit <%= "#{@brewery.name}" %> Information</h2></td></tr>
    <tr>
      <td style="text-align: end"><%= form.label :name, "Name: " %></td>
      <td><%= form.text_field :name, required: true, value: @brewery.name %></td>
    </tr>
    <tr>
      <td style="text-align: end"><%= form.label :city, "City: " %></td>
      <td><%= form.text_field :city, required: true, value: @brewery.city %> </td>
    </tr>
    <tr>
      <td style="text-align: end"><%= form.label :state, "State: " %></td>
      <td><%= form.text_field :state, maxlength: 2, required: true, value: @brewery.state %></td>
    </tr>
    <tr>
      <td style="text-align: end"><%= form.label :founded, "Year Founded: " %></td>
      <td><%= form.number_field :founded, in: 1800..2030, step: 1, required: true, value: @brewery.founded %></td>
    </tr>
    <tr>
      <td style="text-align: end"><%= form.label :annual_production, "Annual Production: " %></td>
      <td><%= form.number_field :annual_production, in: 0..10000000, required: true, value: @brewery.annual_production%></td>
    </tr>
    <tr>
      <td style="text-align: end"><%= form.label :ba_member, "BA Member: " %></td>
      <td><%= form.check_box :ba_member, checked: @brewery.ba_member %></td>
    </tr>
    <tr><td colspan="2" height="15px"> </td></tr>
    <tr><td></td><td><%= form.submit "Update Brewery" %></td></tr>
  </table>

<% end %>

