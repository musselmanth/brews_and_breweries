<h2>Beers</h2>
<% @beers.each do |beer| %>
  <h3><%= link_to beer.name, "/beers/#{beer.id}" %></h3>
  <p><%= link_to beer.brewery.name, "/breweries/#{beer.brewery.id}" %> | Style: <%= beer.style %><br>
  ABV: <%= beer.abv %>% | IBUs: <%= beer.ibu %> | Currently In Production?: <%= beer.in_production ? "Yes" : "No" %></p>
<% end %>